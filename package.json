{
	"name": "plugin-tpl",
	"version": "1.0.0",
	"description": "plugin template",
	"license": "GPL-2.0-or-later",
	"scripts": {
		"css:lint": "stylelint \"src/css/**/*.css\" || echo ---",
		"css:fix": "stylelint \"src/css/**/*.css\" --fix || echo ---",
		"js:lint": "eslint \"src/js/**/*.js\" || echo ---",
		"js:fix": "eslint \"src/js/**/*.js\" --fix || echo ---",
		"php:lint": "composer-runner lint",
		"php:fix": "composer-runner fix",
		"php:compat": "composer-runner compat",
		"lint": "npm run php:lint && npm run js:lint && npm run css:lint",
		"fix": "npm run php:fix && npm run js:fix && npm run css:fix",
		"copy": "copy-and-watch --clean \"src/**/*\" \"build/plugin-tpl\"",
		"watch": "copy-and-watch --clean --watch \"src/**/*\" \"build/plugin-tpl\"",
		"zip": "zip-build -t=%NAME%.%EXT% build/plugin-tpl build",
		"build": "npm run copy && npm run zip"
	},
	"devDependencies": {
		"@wordpress/eslint-plugin": "^8.0.2",
		"@wordpress/stylelint-config": "^19.0.1",
		"copy-and-watch": "^0.1.5",
		"eslint": "^7.20.0",
		"node-composer-runner": "^0.4.0",
		"stylelint": "^13.11.0",
		"zip-build": "^1.3.0"
	}
}
